{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Stock Test (Simple)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/component/software/finance/stock/stock_test.py",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/bazel-bin/component/software/finance/stock/test_integration.runfiles/_main:${workspaceFolder}/bazel-bin/component/software/finance/stock/test_integration.runfiles"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Stock Test (Pytest)",
            "type": "debugpy", 
            "request": "launch",
            "module": "pytest",
            "args": [
                "component/software/finance/stock/stock_test.py::test_stock_fetches_real_data",
                "-v", "-s"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/bazel-bin/component/software/finance/stock/test_integration.runfiles/_main:${workspaceFolder}/bazel-bin/component/software/finance/stock/test_integration.runfiles"
            },
            "console": "integratedTerminal"
